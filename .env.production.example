# SparkOne — Produção (exemplo)

ENVIRONMENT=production
DEBUG=false
ALLOW_PARTIAL_STARTUP=false

# Domínios e CORS
ALLOWED_HOSTS=sparkone-ai.macspark.dev
CORS_ORIGINS=https://sparkone-ai.macspark.dev
CORS_ALLOW_METHODS=GET,POST,PUT,PATCH,DELETE,OPTIONS
CORS_ALLOW_HEADERS=Authorization,Content-Type,Accept

# Banco de Dados e Cache
DATABASE_URL=postgresql+asyncpg://sparkone:REPLACE@db:5432/sparkone
VECTOR_STORE_URL=postgresql://sparkone:REPLACE@db:5432/sparkone
REDIS_URL=redis://cache:6379/0

# Provedores de IA (defina ao menos um)
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4o-mini
LOCAL_LLM_URL=
LOCAL_LLM_API_KEY=

# Embeddings
EMBEDDING_PROVIDER=openai
OPENAI_EMBEDDING_MODEL=text-embedding-3-large
LOCAL_EMBEDDING_MODEL=nomic-embed-text

# Interface Web
WEB_PASSWORD=REPLACE-STRONG-PASSWORD
WEB_UPLOAD_DIR=uploads
WEB_MAX_UPLOAD_SIZE=10485760
WEB_SESSION_TTL_SECONDS=1800

# Integrações
EVOLUTION_API_BASE_URL=
EVOLUTION_API_KEY=
NOTION_API_KEY=
NOTION_DATABASE_ID=
GOOGLE_SHEETS_SYNC_SPREADSHEET_ID=
GOOGLE_SHEETS_SYNC_RANGE=
GOOGLE_SHEETS_CREDENTIALS_PATH=/secrets/google_sheets.json
GOOGLE_CALENDAR_CREDENTIALS_PATH=/secrets/google_calendar.json
CALENDAR_PROVIDER=none

WHATSAPP_NOTIFY_NUMBERS=
WHATSAPP_SEND_MAX_RETRIES=3
FALLBACK_EMAIL=
SMTP_HOST=
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=

# Segurança
SECURITY_HSTS_ENABLED=true
SECURITY_HSTS_MAX_AGE=63072000
SECURITY_HSTS_INCLUDE_SUBDOMAINS=true
SECURITY_HSTS_PRELOAD=false

# Observabilidade / OTEL (opcional recomendado)
OTEL_ENABLED=false
OTEL_SERVICE_NAME=sparkone-api
OTEL_SERVICE_NAMESPACE=sparkone
OTEL_EXPORTER_ENDPOINT=http://jaeger:4317
OTEL_EXPORTER_HEADERS=
OTEL_TRACES_SAMPLER_RATIO=0.25
OTEL_DEBUG_CONSOLE=false

# Limites
INGESTION_MAX_CONTENT_LENGTH=6000

