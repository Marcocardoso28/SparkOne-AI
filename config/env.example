# Example Environment Configuration
# Copy this file to .env.development, .env.staging, or .env.production and adjust values

ENVIRONMENT=development
DEBUG=true

# Database
DATABASE_URL=sqlite:///./data/databases/sparkone.db
VECTOR_STORE_URL=sqlite:///./data/databases/vector.db

# Redis
REDIS_URL=redis://localhost:6379/0

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# API
API_V1_STR=/api/v1
PROJECT_NAME=SparkOne
VERSION=0.1.0

# Security
SECRET_KEY=your-secret-key-here
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8000"]

# LLM Providers
OPENAI_API_KEY=your-openai-api-key
OPENAI_MODEL=gpt-4
LLM_FALLBACK_ENABLED=true
LLM_FALLBACK_URL=http://localhost:8001/v1

# Integrations
NOTION_API_KEY=your-notion-api-key
NOTION_DATABASE_ID=your-notion-database-id
GOOGLE_SHEETS_CREDENTIALS_PATH=path/to/credentials.json
GOOGLE_CALENDAR_CREDENTIALS_PATH=path/to/calendar-credentials.json

# WhatsApp
EVOLUTION_API_URL=http://localhost:8080
EVOLUTION_API_TOKEN=your-evolution-token
WHATSAPP_NOTIFY_NUMBERS=+5511999999999

# Email
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
FALLBACK_EMAIL=your-email@gmail.com

# Web UI
WEB_PASSWORD=your-web-password
WEB_SESSION_TTL_SECONDS=1800
WEB_MAX_UPLOAD_SIZE=10485760

# Observability
ENABLE_METRICS=true
ENABLE_TRACING=true
PROMETHEUS_PORT=9090
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4317
