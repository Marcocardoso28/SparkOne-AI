# Configuração de ambiente para PRODUÇÃO - SparkOne
# Este arquivo deve ser copiado para .env na raiz do projeto

# Ambiente
ENVIRONMENT=production
DEBUG=false

# Banco de dados (Postgres gerenciado)
DATABASE_URL=postgresql+asyncpg://user:password@host:5432/database
VECTOR_STORE_URL=postgresql://user:password@host:5432/database
REDIS_URL=redis://redis:6379/0

# Provedores LLM
OPENAI_API_KEY=your_openai_key_here
OPENAI_BASE_URL=
OPENAI_MODEL=gpt-4o-mini

LOCAL_LLM_URL=http://llm:11434
LOCAL_LLM_API_KEY=
LOCAL_LLM_MODEL=llama-3.1-8b-instruct
LOCAL_LLM_FAST_MODEL=gemma3:4b
LOCAL_LLM_SMART_MODEL=llama3.1:8b
LLM_REQUEST_TIMEOUT=30.0
LLM_MAX_RETRIES=3

# Embeddings
EMBEDDING_PROVIDER=local
OPENAI_EMBEDDING_MODEL=text-embedding-3-large
LOCAL_EMBEDDING_MODEL=nomic-embed-text

# Configurações gerais
PERSONA_NAME=SparkOne
TIMEZONE=America/Sao_Paulo
ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com
CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com
CORS_ALLOW_METHODS=GET,POST,PUT,PATCH,DELETE,OPTIONS
CORS_ALLOW_HEADERS=Authorization,Content-Type,Accept,X-Correlation-ID
CORS_ALLOW_CREDENTIALS=true

# Segurança
SECURITY_HSTS_ENABLED=true
SECURITY_HSTS_MAX_AGE=63072000
SECURITY_HSTS_INCLUDE_SUBDOMAINS=true
SECURITY_HSTS_PRELOAD=true

# OpenTelemetry
OTEL_ENABLED=true
OTEL_SERVICE_NAME=sparkone-api
OTEL_SERVICE_NAMESPACE=sparkone
OTEL_EXPORTER_ENDPOINT=http://jaeger:14268/api/traces
OTEL_EXPORTER_HEADERS=
OTEL_TRACES_SAMPLER_RATIO=0.1
OTEL_DEBUG_CONSOLE=false

# Eventos
ENABLE_EVENT_DISPATCHER=true
EVENT_WEBHOOK_URL=
EVENT_WEBHOOK_TOKEN=your_webhook_token_here

# Web UI
WEB_PASSWORD=your_secure_password_here
WEB_UPLOAD_DIR=uploads
WEB_MAX_UPLOAD_SIZE=10485760
WEB_SESSION_TTL_SECONDS=3600

# Google Services
GOOGLE_SHEETS_SYNC_SPREADSHEET_ID=
GOOGLE_SHEETS_SYNC_RANGE=
GOOGLE_SHEETS_CREDENTIALS_PATH=/secrets/google-sheets-credentials.json
GOOGLE_CALENDAR_CREDENTIALS_PATH=/secrets/google-calendar-credentials.json

# Evolution API (WhatsApp)
EVOLUTION_API_BASE_URL=https://your-evolution-api.com
EVOLUTION_API_KEY=your_evolution_api_key
EVOLUTION_API_TIMEOUT=15.0

# Notion
NOTION_API_KEY=your_notion_api_key
NOTION_DATABASE_ID=your_notion_database_id

# Calendário
CALENDAR_PROVIDER=google
CALENDAR_PRIMARY_ID=your_calendar_id
CALDAV_URL=
CALDAV_USERNAME=
CALDAV_PASSWORD=

# Notificações
WHATSAPP_NOTIFY_NUMBERS=+5511999999999
FALLBACK_EMAIL=admin@yourdomain.com
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password

# Configurações adicionais
REQUIRE_AGNO=false
WHATSAPP_SEND_MAX_RETRIES=3
INGESTION_MAX_CONTENT_LENGTH=6000

# Timezone
TZ=America/Sao_Paulo

# 2FA Settings
TOTP_ISSUER=SparkOne
TOTP_ALGORITHM=SHA1
TOTP_DIGITS=6
TOTP_PERIOD=30

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_DEFAULT_REQUESTS=100
RATE_LIMIT_DEFAULT_WINDOW=3600

# Backup Settings
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
