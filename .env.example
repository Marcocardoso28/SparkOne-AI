# Essential application configuration
ENVIRONMENT=development
DEBUG=true

# Database (async SQLAlchemy URL)
DATABASE_URL=postgresql+asyncpg://sparkone:sparkone@localhost:5432/sparkone

# Redis
REDIS_URL=redis://localhost:6379/0

# Secrets
# Generate a strong secret key (e.g., openssl rand -base64 32)
SECRET_KEY=change-me

# LLM Providers (set one: OpenAI or local)
OPENAI_API_KEY=
OPENAI_BASE_URL=
LOCAL_LLM_URL=
LOCAL_LLM_API_KEY=
EMBEDDING_PROVIDER=local
OPENAI_EMBEDDING_MODEL=text-embedding-3-large
LOCAL_EMBEDDING_MODEL=nomic-embed-text

# Web UI (optional legacy password; DB login is preferred)
WEB_PASSWORD=

# Traefik dashboard auth (format: user:hashed_password)
# Generate with: htpasswd -nbB admin 'yourpassword' | sed -e 's/\$/$$/g'
TRAEFIK_BASICAUTH_USERS=

# Optional: External services
# Google Places (for recommendations endpoint)
GOOGLE_PLACES_API_KEY=

# Note: When running with Docker Compose, DATABASE_URL inside the API container
# should point to host "db" (set in your real .env), e.g.:
# DATABASE_URL=postgresql+asyncpg://sparkone:sparkone@db:5432/sparkone
