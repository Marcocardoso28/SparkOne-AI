{
  "annotations": {
    "list": [
      {
        "builtIn": 1,
        "datasource": "-- Grafana --",
        "enable": true,
        "hide": true,
        "iconColor": "rgba(0, 211, 255, 1)",
        "name": "Annotations & Alerts",
        "type": "dashboard"
      }
    ]
  },
  "panels": [
    {
      "datasource": "Prometheus",
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "palette-classic" }
        },
        "overrides": []
      },
      "gridPos": { "h": 8, "w": 24, "x": 0, "y": 0 },
      "id": 1,
      "targets": [
        {
          "expr": "rate(sparkone_http_requests_total[5m])",
          "legendFormat": "{{method}} {{status}}",
          "refId": "A"
        }
      ],
      "title": "HTTP Requests Rate",
      "type": "timeseries"
    },
    {
      "datasource": "Prometheus",
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "thresholds" },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "red", "value": 2 }
            ]
          }
        },
        "overrides": []
      },
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 8 },
      "id": 2,
      "targets": [
        { "expr": "increase(sparkone_notion_sync_total{status=\"failure\"}[1h])", "refId": "A" }
      ],
      "title": "Notion Sync Failures (1h)",
      "type": "stat"
    },
    {
      "datasource": "Prometheus",
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "thresholds" },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "red", "value": 1 }
            ]
          }
        },
        "overrides": []
      },
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 8 },
      "id": 3,
      "targets": [
        { "expr": "increase(sparkone_sheets_sync_total{status=\"failure\"}[1h])", "refId": "A" }
      ],
      "title": "Sheets Sync Failures (1h)",
      "type": "stat"
    },
    {
      "datasource": "Prometheus",
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "palette-classic" }
        },
        "overrides": []
      },
      "gridPos": { "h": 8, "w": 24, "x": 0, "y": 16 },
      "id": 4,
      "targets": [
        { "expr": "increase(sparkone_whatsapp_notifications_total[1h])", "refId": "A" }
      ],
      "title": "WhatsApp Notifications (1h)",
      "type": "bargauge"
    },
    {
      "datasource": "Prometheus",
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "palette-classic" },
          "unit": "s"
        },
        "overrides": []
      },
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 24 },
      "id": 5,
      "targets": [
        {
          "expr": "histogram_quantile(0.95, rate(sparkone_http_request_latency_seconds_bucket[5m]))",
          "legendFormat": "95th percentile",
          "refId": "A"
        },
        {
          "expr": "histogram_quantile(0.50, rate(sparkone_http_request_latency_seconds_bucket[5m]))",
          "legendFormat": "50th percentile",
          "refId": "B"
        }
      ],
      "title": "Request Latency Percentiles",
      "type": "timeseries"
    },
    {
      "datasource": "Prometheus",
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "thresholds" },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 0.1 },
              { "color": "red", "value": 0.5 }
            ]
          },
          "unit": "s"
        },
        "overrides": []
      },
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 24 },
      "id": 6,
      "targets": [
        { "expr": "avg(sparkone_database_query_duration_seconds)", "refId": "A" }
      ],
      "title": "Average Database Query Time",
      "type": "stat"
    },
    {
      "datasource": "Prometheus",
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "palette-classic" }
        },
        "overrides": []
      },
      "gridPos": { "h": 8, "w": 24, "x": 0, "y": 32 },
      "id": 7,
      "targets": [
        {
          "expr": "rate(sparkone_e2e_test_duration_seconds_sum[5m]) / rate(sparkone_e2e_test_duration_seconds_count[5m])",
          "legendFormat": "{{test_name}}",
          "refId": "A"
        }
      ],
      "title": "E2E Test Performance",
      "type": "timeseries"
    },
    {
      "datasource": "Prometheus",
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "thresholds" },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 70 },
              { "color": "red", "value": 85 }
            ]
          },
          "unit": "percent"
        },
        "overrides": []
      },
      "gridPos": { "h": 4, "w": 6, "x": 0, "y": 40 },
      "id": 8,
      "targets": [
        { "expr": "100 * (1 - avg(rate(container_cpu_usage_seconds_total[5m])))", "refId": "A" }
      ],
      "title": "CPU Usage",
      "type": "stat"
    },
    {
      "datasource": "Prometheus",
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "thresholds" },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 70 },
              { "color": "red", "value": 85 }
            ]
          },
          "unit": "percent"
        },
        "overrides": []
      },
      "gridPos": { "h": 4, "w": 6, "x": 6, "y": 40 },
      "id": 9,
      "targets": [
        { "expr": "100 * (1 - (node_memory_MemAvailable_bytes / node_memory_MemTotal_bytes))", "refId": "A" }
      ],
      "title": "Memory Usage",
      "type": "stat"
    },
    {
      "datasource": "Prometheus",
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "thresholds" },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 10 },
              { "color": "red", "value": 50 }
            ]
          }
        },
        "overrides": []
      },
      "gridPos": { "h": 4, "w": 6, "x": 12, "y": 40 },
      "id": 10,
      "targets": [
        { "expr": "sparkone_active_connections", "refId": "A" }
      ],
      "title": "Active DB Connections",
      "type": "stat"
    },
    {
      "datasource": "Prometheus",
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "thresholds" },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 1000 },
              { "color": "red", "value": 5000 }
            ]
          }
        },
        "overrides": []
      },
      "gridPos": { "h": 4, "w": 6, "x": 18, "y": 40 },
      "id": 11,
      "targets": [
        { "expr": "sparkone_pending_tasks_total", "refId": "A" }
      ],
      "title": "Pending Tasks",
      "type": "stat"
    },
    {
      "datasource": "Prometheus",
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "palette-classic" }
        },
        "overrides": []
      },
      "gridPos": { "h": 8, "w": 24, "x": 0, "y": 44 },
      "id": 12,
      "targets": [
        {
          "expr": "rate(sparkone_message_processing_duration_seconds_sum[5m]) / rate(sparkone_message_processing_duration_seconds_count[5m])",
          "legendFormat": "{{channel}}",
          "refId": "A"
        }
      ],
      "title": "Message Processing Time by Channel",
      "type": "timeseries"
    }
  ],
  "schemaVersion": 38,
  "templating": { "list": [] },
  "title": "SparkOne Overview",
  "uid": "sparkone-overview",
  "version": 1
}
